{
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Edit|Write|NotebookEdit",
				"hooks": [
					{
						"type": "command",
						"command": "pnpm biome check --fix --unsafe \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
					}
				]
			}
		],
		"PreToolUse": [
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": "if echo \"$CLAUDE_FILE_PATH\" | grep -qE '\\.env($|\\.)'; then echo 'BLOCK: Do not edit .env files directly'; exit 2; fi"
					}
				]
			}
		]
	}
}
